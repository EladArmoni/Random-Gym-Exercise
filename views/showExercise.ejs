<%-include('partials/header')%>

    <title> <%=exercise.name%></title>
    </head>

    <body class=" bg-dark text-light">
        <%-include('partials/navbar')%>
            <div class="row m-5 pt-5">
                <div class="container-fluid align-items-center justify-content-center col-md-6">
                    <div class="card text-center bg-dark">
                        <div class="card-header bg-light">
                            <h1 class="text-primary">
                                <%=exercise.name%>
                            </h1>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">Main Muscle: <%=exercise.muscle%>
                            </h4>
                            <p class="card-text">Difficulty: <%=exercise.difficulty%>
                            </p>
                            <div class="ratio ratio-16x9">
                                <iframe src="<%=exercise.description%>&autoplay=1&mute=1" title="YouTube video player"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<%-include('partials/footer')%>
